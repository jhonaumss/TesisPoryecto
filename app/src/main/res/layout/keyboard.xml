<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="X"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#FFFF00">
        </Button>
        <Button
            android:id="@+id/btn10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#FFFF00">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#FFFF00">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#FF0000">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#FF0000">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#0080FF">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="#0080FF">
        </Button>
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorIcons"
            android:background="@color/colorPrimaryText">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorIcons"
            android:background="@color/colorPrimaryText">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorIcons">
        </Button>
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorIcons">
        </Button>
        <Button
            android:id="@+id/btnM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorIcons">
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Eliminar"
            android:fontFamily="Bodoni MT"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorIcons">
        </Button>

    </LinearLayout>


</merge>