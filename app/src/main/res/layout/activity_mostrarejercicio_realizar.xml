<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarejercicioRealizar"
    android:background="@drawable/fondo1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="330dp"
            android:layout_height="100dp"
            app:cardCornerRadius="7dp"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/flexion"

                />
            <TextView
                android:id="@+id/textViewprimero"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="Bodoni MT"
                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="330dp"
            android:layout_height="100dp"
            app:cardCornerRadius="7dp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/tricep"
                />
            <TextView
                android:id="@+id/textViewsegundo"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="Bodoni MT"
            />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="330dp"
            android:layout_height="100dp"
            app:cardCornerRadius="7dp"
            android:backgroundTintMode="screen"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"
                android:src="@drawable/abdominal"
                />
            <TextView
                android:id="@+id/textViewtercero"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:layout_marginRight="15dp"
                android:textColor="@color/colorPrimaryText"
                android:fontFamily="Bodoni MT"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center">

        <Button
            android:id="@+id/buttonComenzar"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/btn_comenzar"
            android:background="@drawable/btnovalado"
            android:textColor="@color/colorIcons"
            android:textSize="16sp"
            android:fontFamily="Bodoni MT"
            />
    </LinearLayout>
</LinearLayout>